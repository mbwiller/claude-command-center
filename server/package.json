{
  "name": "claude-code-command-center-server",
  "version": "1.0.0",
  "description": "Observability server for Claude Code multi-agent monitoring",
  "type": "module",
  "scripts": {
    "start": "bun run index.ts",
    "start:node": "node --import tsx server-node.ts",
    "dev": "bun --watch run index.ts",
    "dev:node": "node --import tsx --watch server-node.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=integration"
  },
  "dependencies": {
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0"
  }
}
